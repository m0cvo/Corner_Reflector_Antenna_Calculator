<Window x:Class="Corner_Reflector_Antenna_Calculator.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Corner_Reflector_Antenna_Calculator"
        mc:Ignorable="d"
        Title="Corner Reflector Antenna" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="344" Margin="10,38,0,0" VerticalAlignment="Top" Width="462" Source="/CornerReflector.jpg"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="671,364,0,0" VerticalAlignment="Top" Width="90" Click="Button_Click" FontSize="14" Height="30"/>
        <Label Content="Enter Frequency in Mhz:" HorizontalAlignment="Left" Margin="366,63,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Side length in metres (l):" HorizontalAlignment="Left" Margin="366,130,0,0" VerticalAlignment="Top" FontSize="14" Width="158"/>
        <Label Content="Spacing to dipole (in m) (s):" HorizontalAlignment="Left" Margin="366,159,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.16,0.597" FontSize="14" Width="158"/>
        <Label Content="Select angle in degrees (a):" HorizontalAlignment="Left" Margin="366,97,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.081,0.107" FontSize="14" Width="181"/>
        <TextBox x:Name="freqBox" HorizontalAlignment="Left" Margin="566,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <TextBox x:Name="sideBox" HorizontalAlignment="Left" Margin="567,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14" IsReadOnlyCaretVisible="True"/>
        <TextBox x:Name="spaceBox" HorizontalAlignment="Left" Margin="567,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14" RenderTransformOrigin="0.506,0.531" IsReadOnlyCaretVisible="True"/>
        <RadioButton x:Name="RBtn1" Content="90" GroupName="AngleGroup" HorizontalAlignment="Left" Margin="566,105,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RBtn2" Content="60" GroupName="AngleGroup" HorizontalAlignment="Left" Margin="610,105,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RBtn3" Content="45" GroupName="AngleGroup"  HorizontalAlignment="Left" Margin="655,105,0,0" VerticalAlignment="Top"/>
        <Button x:Name="CalculateBtn" Content="Calculate" HorizontalAlignment="Left" Margin="565,316,0,0" VerticalAlignment="Top" FontSize="14" Width="90" Height="30" Click="CalculateBtn_Click"/>
        <Label Content="Gain dBd:" HorizontalAlignment="Left" Margin="368,245,0,0" VerticalAlignment="Top" FontSize="14" Width="158"/>
        <TextBox x:Name="gainBox" HorizontalAlignment="Left" Margin="567,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Button x:Name="helpBtn" Content="Help" HorizontalAlignment="Left" Margin="671,316,0,0" VerticalAlignment="Top" FontSize="14" Width="90" Height="30" Click="helpBtn_Click"/>
        <Label Content="Width of reflector:" HorizontalAlignment="Left" Margin="366,188,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="WidthBox" HorizontalAlignment="Left" Margin="567,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Label Content="Length of driven element:" HorizontalAlignment="Left" Margin="368,216,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="DipBox" HorizontalAlignment="Left" Margin="567,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Label Content="All lengths in metres" HorizontalAlignment="Left" Margin="366,29,0,0" VerticalAlignment="Top" FontSize="14"/>

    </Grid>
</Window>
